{{define "title"}}Snippet #{{.ID}}{{end}}

{{define "main"}}
	<div class='snippet'>
		<div class='metadata'>
			<strong>{{.Title}}</strong>
			<span>#{{.ID}}</span>
		</div>
		<pre><code>{{.Content}}</code></pre>
		<div class='metadata'>
			<span>Created: {{.Created}}</span>
			<span>Expires: {{.Expires}}</span>
		</div>
	</div>
{{end}}
